<h1>
  Player List
<% if (league.get('name')) { %>
  <small><%= league.get('name') %></small>
<% } %>
</h1>

<div class='row'>
  <div class='col-sm-7 btn-group btn-group-xs margin-bottom-sm' data-toggle='buttons'>
    <label class='pos-select btn btn-primary btn-hover-border-light-blue'>
      <input type='radio' name='position' data-position='all'>All Offense
    </label>
    <label class='pos-select btn btn-primary btn-hover-border-light-blue'>
      <input type='radio' name='position' data-position='QB'>QB
    </label>
    <label class='pos-select btn btn-primary btn-hover-border-light-blue'>
      <input type='radio' name='position' data-position='RB'>RB
    </label>
    <label class='pos-select btn btn-primary btn-hover-border-light-blue'>
      <input type='radio' name='position' data-position='WR'>WR
    </label>
    <label class='pos-select btn btn-primary btn-hover-border-light-blue'>
      <input type='radio' name='position' data-position='TE'>TE
    </label>
    <label class='pos-select btn btn-primary btn-hover-border-light-blue'>
      <input type='radio' name='position' data-position='R/W/T'>R/W/T
    </label>
    <label class='pos-select btn btn-primary btn-hover-border-light-blue'>
      <input type='radio' name='position' data-position='K'>K
    </label>
    <label class='pos-select btn btn-primary btn-hover-border-light-blue'>
      <input type='radio' name='position' data-position='DEF'>DEF
    </label>
  </div>

  <div class='col-sm-5 pull-right'>
    <div class='pull-right btn-group btn-group-xs margin-bottom-sm' data-toggle='buttons'>
      <label class='avail-select btn btn-primary btn-hover-border-light-blue'>
        <input type='radio' name='position' data-avail='available'>Available
      </label>
      <label class='avail-select btn btn-primary btn-hover-border-light-blue'>
        <input type='radio' name='position' data-avail='taken'>Taken
      </label>
      <label class='avail-select btn btn-primary btn-hover-border-light-blue'>
        <input type='radio' name='position' data-avail='all'>All Players
      </label>
    </div>
  </div>
</div>

<table class='table table-hover table-striped'>
  <thead>
    <tr class='info'>
      <th rowspan='2' data-sort-col="position" class='no-border-top'>POS</th>
      <th rowspan='2' class='no-border-top'>Action</th>
      <th rowspan='2' class='no-border-top'>Player</th>
      <th colspan='3' data-sort-col="pass_yards" class='centered helper'>
        <small>Passing</small>
      </th>
      <th colspan='2' data-sort-col="rush_yards" class='centered helper'>
        <small>Rushing</small>
      </th>
      <th colspan='2' data-sort-col="rec_yards" class='centered helper'>
        <small>Receiving</small>
      </th>
      <th rowspan='2' class='no-border-top' data-sort-col="two_pt_conv">2 Pt</th>
      <th rowspan='2' class='no-border-top' data-sort-col="fumbles">Fum<br>Lost</th>
      <th rowspan='2' class='no-border-top' data-sort-col="points">Points</th>
    </tr>
    <tr class='info'>
      <th data-sort-col="pass_yards">Yds</th>
      <th data-sort-col="pass_tds">TD</th>
      <th data-sort-col="pass_ints">Int</th>
      <th data-sort-col="rush_yards">Yds</th>
      <th data-sort-col="rush_tds">TD</th>
      <th data-sort-col="rec_yards">Yds</th>
      <th data-sort-col="rec_tds">TD</th>
    </tr>
  </thead>

  <tbody></tbody>
</table>

<ul class='pager clearfix no-margin-bottom'>
  <li class='previous'>
    <button class='btn btn-default' id='prev-page'>
      <span class'glyphicon glyphicon-backward'></span>
      Previous
    </button>
  </li>
  <li class='next'>
    <button class='btn btn-default' id='next-page'>
      Next
      <span class'glyphicon glyphicon-forward'></span>
    </button>
  </li>
</ul>

<div class="modal fade" id="player-action-modal" tabindex="-1" role="dialog" aria-labelledby="addDropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="modal-title"></h4>
      </div>
      <div class="modal-body"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success confirm-btn">Add player</button>
      </div>
    </div>
  </div>
</div>