<div class='dark inset-shadow clearfix padded margin-md'>
  <h1 class='pull-left no-margin'>
    <%= team.escape('name') %>
    <a href="#/leagues/<%= team.league() ? team.league().id : 0 %>">
      <small><%= team.league() ? team.league().get('name') : null %></small>
    </a>
  </h1>
  <h4 class='pull-right no-margin'>
    <%= team.get('wins') %>-<%= team.get('losses') %>-<%= team.get('ties') %> /
    1st place
  </h4>
</div>

<div class='col-sm-12'>
  <% if (team.league()) { %>
    <ul class='pull-right list-inline'>
      <li>
        <a href='#/leagues/<%= team.league().id %>/players'>
          Add Players
        </a>
      </li> /
      <li>
        <a href="#/leagues/<%= team.league().id %>/teams/<%= team.id %>/watched">
          Watch List
        </a>
      </li>
      <% if (team.league().get('teams')) { %>/
      <li class="dropdown" id="accountmenu"> <a class="dropdown-toggle" data-toggle="dropdown" href="#">Teams<b class="caret"></b></a>

          <ul class="dropdown-menu">
            <% team.league().get('teams').forEach(function(otherTeam) { %>
              <li>
                <a href="#"><%= otherTeam.name %></a>
              </li>
            <% }); %>
          </ul>
      </li>
      <% } %>
    </ul>
  <% }; %>
</div>

<table class='table table-hover table-striped'>
  <thead>
    <tr class='info'>
      <th rowspan='2' class='no-border-top'>POS</th>
      <th rowspan='2' class='no-border-top'>Action</th>
      <th rowspan='2' class='no-border-top'>Player</th>
      <th colspan='3' data-sort-col="passYds" class='centered helper'>
        <small>Passing</small>
      </th>
      <th colspan='2' data-sort-col="rushYds" class='centered helper'>
        <small>Rushing</small>
      </th>
      <th colspan='2' data-sort-col="recYds" class='centered helper'>
        <small>Receiving</small>
      </th>
      <th rowspan='2' class='no-border-top' data-sort-col="twoPtConv">2 Pt</th>
      <th rowspan='2' class='no-border-top' data-sort-col="fum">Fum<br>Lost</th>
      <th rowspan='2' class='no-border-top' data-sort-col="points">Points</th>
    </tr>
    <tr class='info'>
      <th data-sort-col="passYds">Yds</th>
      <th data-sort-col="passTD">TD</th>
      <th data-sort-col="passInt">Int</th>
      <th data-sort-col="rushYds">Yds</th>
      <th data-sort-col="rushTD">TD</th>
      <th data-sort-col="recYds">Yds</th>
      <th data-sort-col="recTD">TD</th>
    </tr>
  </thead>

  <tbody></tbody>
</table>