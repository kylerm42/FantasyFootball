<h1><%= @user.username %></h1>
<% if @user == current_user %>
  <small><%= link_to "Edit your profile", edit_user_url(@user.username) %></small>
<% end %>

<h3>All Your Teams</h3>
<% @user.teams.each do |team| %>
  <p>
    <%= link_to team.name, league_team_url(team.league, team) %><br>
    <%= link_to team.league.name, league_url(team.league) %>
    <% if team.league.manager_id == @user.id %>
      <br>* Commissioner
    <% end %>
  </p>
<% end %>

<%= link_to "Join a league", leagues_url %><br>
<%= link_to "Create a league", new_league_url %>